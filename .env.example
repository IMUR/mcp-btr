# MCP-BTR Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: API Keys for MCP Servers
# =============================================================================

# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens
# Required scopes: repo, read:org (for organization repos)
GITHUB_TOKEN=ghp_your_token_here

# Perplexity API Key
# Get at: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-your_key_here

# =============================================================================
# OPTIONAL: Additional MCP Servers
# =============================================================================

# Gitea API Token (for self-hosted git)
# GITEA_TOKEN=your_gitea_token
# GITEA_HOST=https://git.example.com

# ElevenLabs API Key (for TTS)
# ELEVENLABS_API_KEY=your_key_here

# Mapbox Access Token (for geocoding)
# MAPBOX_TOKEN=pk.your_token_here

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# BTR Gateway
BTR_GATEWAY_PORT=8090
BTR_GATEWAY_HOST=0.0.0.0

# Tool Selector UI
BTR_UI_PORT=5010
BTR_UI_HOST=0.0.0.0

# Default preset to load on startup
BTR_DEFAULT_PRESET=development

# =============================================================================
# ADVANCED
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable request logging
ENABLE_REQUEST_LOGGING=false
